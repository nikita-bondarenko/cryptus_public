POST /exchange

отдаю body: {
    direction_type
    currency_give_id
    currency_get_id
    currency_give_amount
    currency_get_amount
    network_id
    city_id
    bank_id
    rate_id
}

получаю {
    exchange_id
}

PUT /user

body: {
    user_id
    user_data: {
        name
        email
        phone
    }
}









